<server description="Sample Liberty server">

    <featureManager>
        <feature>restfulWS-3.0</feature>
        <feature>jsonb-2.0</feature>
        <feature>jsonp-2.0</feature>
        <feature>faces-3.0</feature>
        <feature>cdi-3.0</feature>
        <!-- FOR SECURITY -->
        <feature>appSecurity-4.0</feature>
        <feature>servlet-5.0</feature>
        <feature>mpJwt-2.0</feature>
        <feature>mpConfig-3.0</feature>
        <feature>mpRestClient-3.0</feature>
        <feature>persistence-3.0</feature>

    </featureManager>

    <variable name="default.http.port" defaultValue="9082"/>
    <variable name="default.https.port" defaultValue="9442"/>

    <httpEndpoint httpPort="${default.http.port}" httpsPort="${default.https.port}" 
                  id="defaultHttpEndpoint" />

    <keyStore id="defaultKeyStore" password="secret" />

    <!-- This JWT builder is used to build a JWT for an authenticated user.
             JWTs generated by this builder contain
             the user name and roles of the authenticated user. -->
    <jwtBuilder id="jwtFrontEndBuilder" issuer="jwtIssuer" expiry="24h"/>
    
    <ssl id="defaultSSLConfig" trustDefaultCerts="true" />

    <webApplication location="frontend.war" contextRoot="/"/>

</server>
